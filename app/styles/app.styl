//- ------------------------------
//- Login and Register Container Styling
//- ------------------------------
.authentication-container
	padding 0px 15px
	text-align center
	
	.profile-circle		
		background brandcolor
		margin 50px auto 35px
		display inline-block
		height 150px
		width 150px
		border-radius 75px
		border 2px solid #fff		
		position relative
		i
			color #fff
			position relative
			font-size 8em
			top	10%
	label
		padding 0px
		margin 0px		
		font-size 14px
		a
			label-link()
	input
		form-unit()
		display inline-block
	button	
		form-unit()
		color #ffffff
		background brandcolor
		border 2px solid brandcolor
		&:hover
			color brandcolor
			background #fff
			border 1px solid brandcolor
