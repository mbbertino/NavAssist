//- ------------------------------
//- Mixins
//- ------------------------------
form-unit()
	padding 0px
	padding-left 10px
	height 40px
	border-radius 4px
	border none
	background #efefef
	margin 10px 0px
	font-size 18px

cta()
	background 

label-link()
	color brandcolor
	&:hover
		color lighten(brandcolor, 10)
		text-decoration none

