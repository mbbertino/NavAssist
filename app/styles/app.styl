@import 'vendor/nib'

//- ------------------------------
//- Global color variables
//- ------------------------------
// maybe an accent color F26101 orange
brandcolor = #57bcdb
// accentcolor =
// bgcolor =
//- ------------------------------

//- ------------------------------
//- Mixins
//- ------------------------------
form-unit()
	padding 0px
	padding-left 10px
	height 40px
	border-radius 4px
	border none
	background #efefef
	margin 10px 0px
	font-size 18px

cta()
	background 

label-link()
	color brandcolor
	&:hover
		color lighten(brandcolor, 10)
		text-decoration none

//- ------------------------------

//- ------------------------------
//- mobile/small tablets break
//- ------------------------------
@media screen and (max-width: 768px)
	.container
		padding 0 0
	.dashboard-padding
		padding 50px 0 0 0
	.navmenu
		padding 50px 0 0 0
//- --------------------------------

@media screen and (min-width: 768px)
	.dashboard-padding
		padding 0 0 0 300px

//- ------------------------------
//- Global styling
//- ------------------------------
html
	body
		font-family: 'Open Sans', sans-serif;	
		// background lighten(#57bcdb, 25) // light light blue, not really good
		// background #D9E8F5 // light grey too blue
		// background #D9E8F5 // light grey
		background #ffffff // straight white
		// background #D9E8F5 // light grey


.container 
	margin 0 auto
	max-width	960px

.undernav
	margin-top 50px

a 
	&:hover
		cursor pointer
//- ------------------------------
.navmenu
.navbar
	background brandcolor
	border none

.navmenu-brand
.navbar-brand
	font-size 22px;
	
.navmenu
	text-align center

	.navmenu-brand
		margin-top 0px
		border-bottom 1px solid #fff

	.profile-circle		
		background brandcolor
		margin 25px auto 25px
		display inline-block
		height 150px
		width 150px
		border-radius 75px
		border 2px solid #fff		
		position relative
		i
			color #fff
			position relative
			font-size 8em
			top	10%
	a
		color #fff

	ul
		li
			font-size 16px
			a
				&:hover
					color brandcolor
					background #fff

	button
		form-unit()
		padding 0px 15px
		border-radius 0px
		background #fff
		color brandcolor

.navbar
	text-align center
	display block

	.navbar-toggle
		margin-left 15px
		position absolute
		left 0px
		border none

		&:hover
			background #fff
			.icon-bar
				background brandcolor
		&:focus
			background #fff
			.icon-bar
				background brandcolor


	.navbar-brand
		float none
		display inline-block
		color #fff


//- ------------------------------
//- Timeline Styling
//- ------------------------------
.timeline
	padding 0px
	list-style none
	.timeline-item
		border-bottom 1px solid brandcolor
//- ------------------------------

//- ------------------------------
//- Login and Register Container Styling
//- ------------------------------
.authentication-container
	padding 0px 15px
	text-align center
	
	.profile-circle		
		background brandcolor
		margin 50px auto 35px
		display inline-block
		height 150px
		width 150px
		border-radius 75px
		border 2px solid #fff		
		position relative
		i
			color #fff
			position relative
			font-size 8em
			top	10%
	label
		padding 0px
		margin 0px		
		font-size 14px
		a
			label-link()
	input
		form-unit()
		display inline-block
	button	
		form-unit()
		color #ffffff
		background brandcolor
		border 2px solid brandcolor
		&:hover
			color brandcolor
			background #fff
			border 1px solid brandcolor
//- ------------------------------